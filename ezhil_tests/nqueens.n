# Ref: http://rosettacode.org/wiki/N-queens_problem#C
#Place n-queens on a board

# some subtle bugs.. whatever..
நிரல்பாகம் attack( hist, col, i, j )
    @(  (எடு(hist,j) == i) || (abs( எடு(hist,j) - i) == (col - j)) ) ஆனால்
		பின்கொடு True
	முடி	
	பின்கொடு False
முடி

நிரல்பாகம் nqueens( n, col, hist, count )
	#print_board( n, hist )
    @( col == n ) ஆனால்
		print_board( n, hist )
		பின்கொடு hist #(count + 1)
	முடி
	
	@( i = 0, i < n, i = i + 1 ) ஆக
			op = ""			
			@( j = 0, (j < col) , j = j + 1 ) ஆக
				@( attack(hist,col,i,j) ) ஆனால்
					நிறுத்து
				முடி
			முடி
			
			@( j < col ) ஆனால்
				தொடர்
			முடி
			வை(hist,col,i)
			hist = nqueens( n, col + 1, hist, count + 1 )
	முடி
	பின்கொடு hist
முடி

நிரல்பாகம் print_board( n, hist )
	பதிப்பி "**************** BOARD "+str(n)+"**************************"
	@( i = 0, i < n, i = i + 1 ) ஆக
			op = ""
			@( j = 0, j < n, j = j + 1 ) ஆக
				@( j == எடு(hist,i) ) ஆனால்
					# God save the Queen
					val = "\\Q/"
				இல்லை
					# chequerboard
					@( ( i + j)% 2 ) ஆனால்
						val = "-.|"
					இல்லை		
						val = "- |"
					முடி
				முடி
				op = op + val
			முடி
			பதிப்பி op
	முடி
	#பதிப்பி "***************************************************************"
முடி

n = 6
hist = [0,0,0,0,0,0,0,0]
count = 0
பதிப்பி nqueens( n, 0, hist, 0 )
